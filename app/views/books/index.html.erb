<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <% if @book.errors.any? %>
     <h3> <%= @book.errors.count %>
        error prohibited this obj from being saved:</h3>
      </%>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
